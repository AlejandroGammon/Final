import random
while True:
#setting up a while loop
    flag= True
    while flag:
        num=input('Type a number for an upper bound: ')
        if num.isdigit():
            print("Let's play!")
            num=int(num)
            flag=False
        else:
            print('Invalid input! Try Again!')

    #generating a number for the user to guess within their chosen bound
    secret=random.randint(1,num)
    #Telling user how many times it took them to get the correct answer
guess=None
    count=1
    while guess != secret:
        guess=input('Please type a number between 1 and ' +str(num)+ ": ")
        if guess.isdigit():
            guess=int(guess)
        if guess == secret:
            print('You got it!')
        else:
            print('Please try again!')
            count +=1
    print ('It took you', count, 'guesses!')
